@model HackerNewsClone.Models.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body { font-family: Arial, sans-serif; padding: 20px; }
        form { margin-top: 20px; }
        input { margin-bottom: 10px; display: block; width: 300px; padding: 8px; }
        button { padding: 10px 15px; background-color: #4CAF50; color: white; border: none; cursor: pointer; }
        button:hover { background-color: #45a049; }
        .link-button {
            background: none;
            color: blue;
            border: none;
            padding: 0;
            font: inherit;
            cursor: pointer;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>Login</h1>
    <form asp-controller="Account" asp-action="Login" method="post">
        <input asp-for="Username" placeholder="Username" />
        <input asp-for="Password" type="password" placeholder="Password" />
        <button type="submit">Login</button>
    </form>
    <button class="link-button" onclick="location.href='@Url.Action("Register", "Account")'">Register</button>
</body>
</html>
